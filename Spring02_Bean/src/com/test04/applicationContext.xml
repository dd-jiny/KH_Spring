<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="lee" class="com.test04.Address">
	<!-- setter를 통해 객체 주입 -->
	<!-- 1.여기서 일단 bean을 통해 객체를 생성해 준다.  -->
		<property name="name" value="이순신"></property>
		<property name="addr" value="서울시 강남구"></property>
		<property name="phone" value="010-1111-1111"></property>
	</bean>
	<!-- Address lee = new Address(); Address타입 -->
	
	<bean id="hong" class="com.test04.Address">
		<property name="name" value="홍길동"></property>
		<property name="addr" value="고양시 덕양구"></property>
		<property name="phone" value="010-1234-5678"></property>
	</bean>
</beans>
